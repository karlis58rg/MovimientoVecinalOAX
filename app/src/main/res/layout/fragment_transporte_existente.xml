<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Transporte.TransporteExistente">

    <ImageView
        android:id="@+id/imgHeaderBackGround"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/ic_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/imgHeaderBackGround"
        app:layout_constraintEnd_toEndOf="@+id/imgHeaderBackGround"
        app:layout_constraintStart_toEndOf="@+id/imgHeaderBackGround"
        app:layout_constraintStart_toStartOf="@+id/imgHeaderBackGround"
        app:layout_constraintTop_toTopOf="@+id/imgHeaderBackGround"
        app:srcCompat="@drawable/ic_logo_header" />

    <ImageView
        android:id="@+id/imgHomeTransporteExistente"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_menu_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgHeaderBackGround"
        app:layout_constraintStart_toStartOf="@+id/imgHeaderBackGround"
        app:layout_constraintTop_toTopOf="@+id/imgHeaderBackGround" />

    <ScrollView
        android:id="@+id/scrollTransporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgHeaderBackGround">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lyTransporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgExiste"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_enviado"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/lblTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu transporte es seguro, Si cuenta con registro en SEMOVI Oaxaca, asegúrate que los siguientes datos corresponden al vehículo.\n"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTS"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/lyPlacaExitoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyTransporte"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/contentConsultaITE"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <!--DATOS DENTRO DEL CUADRO -->
                <LinearLayout
                    android:id="@+id/lblPlacaExitoso"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|right"
                    android:weightSum="1"
                    android:layout_weight="0.08">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBold"
                        android:text="Placa" />
                </LinearLayout>
                <!--TITULO IMAGEN1 TITLE-->
                <LinearLayout
                    android:id="@+id/lblConsultaITE"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.15">
                    <EditText
                        android:id="@+id/txtPlacaExitoso"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:enabled="false"
                        android:maxLength="25"/>
                </LinearLayout>
                <!--IMAGEN3 TITLE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.05">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyNucExitoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyPlacaExitoso"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/contentConsultaTE"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <!--DATOS DENTRO DEL CUADRO -->
                <LinearLayout
                    android:id="@+id/lblNucExitoso"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|right"
                    android:weightSum="1"
                    android:layout_weight="0.08">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBold"
                        android:text="Nuc" />
                </LinearLayout>
                <!--TITULO IMAGEN1 TITLE-->
                <LinearLayout
                    android:id="@+id/lblConsultaTEN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.15">
                    <EditText
                        android:id="@+id/txtNucExitoso"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:enabled="false"
                        android:maxLength="25"/>
                </LinearLayout>
                <!--IMAGEN3 TITLE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.05">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lySitio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyNucExitoso"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/contentConsultaTES"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <!--DATOS DENTRO DEL CUADRO -->
                <LinearLayout
                    android:id="@+id/lblSitio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|right"
                    android:weightSum="1"
                    android:layout_weight="0.08">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBold"
                        android:text="Sitio" />
                </LinearLayout>
                <!--TITULO IMAGEN1 TITLE-->
                <LinearLayout
                    android:id="@+id/lblConsultaTES"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.15">
                    <EditText
                        android:id="@+id/txtSitio"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:enabled="false"
                        android:maxLength="25"/>
                </LinearLayout>
                <!--IMAGEN3 TITLE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.05">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lySitio"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/contentConsultaTEM"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <!--DATOS DENTRO DEL CUADRO -->
                <LinearLayout
                    android:id="@+id/lblMarca"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|right"
                    android:weightSum="1"
                    android:layout_weight="0.08">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBold"
                        android:text="Marca" />
                </LinearLayout>
                <!--TITULO IMAGEN1 TITLE-->
                <LinearLayout
                    android:id="@+id/lblConsultaTEM"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.15">
                    <EditText
                        android:id="@+id/txtMarca"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:enabled="false"
                        android:maxLength="25"/>
                </LinearLayout>
                <!--IMAGEN3 TITLE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.05">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyMarca"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/contentConsultaTET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <!--DATOS DENTRO DEL CUADRO -->
                <LinearLayout
                    android:id="@+id/lblTET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|right"
                    android:weightSum="1"
                    android:layout_weight="0.08">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBold"
                        android:text="Tipo" />
                </LinearLayout>
                <!--TITULO IMAGEN1 TITLE-->
                <LinearLayout
                    android:id="@+id/lblConsultaIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.15">
                    <EditText
                        android:id="@+id/txtTipo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:enabled="false"
                        android:maxLength="25"/>
                </LinearLayout>
                <!--IMAGEN3 TITLE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="1"
                    android:background="@drawable/drawable_pressed"
                    android:layout_weight="0.05">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lySeguimientoExitoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lyTipo"
            android:background="@drawable/drawable_pressed">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|top"
                android:weightSum="1"
                android:layout_weight="0.12">
                <Button
                    android:id="@+id/btnSegumientoExitoso"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_seguimiento_efect"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.15">
                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:text="Da click en este botón para que se registre tu trayectoria sin enviar alerta.\n"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyAlertamientoExitoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/drawable_pressed"
            android:layout_below="@id/lySeguimientoExitoso"
            android:gravity="center_horizontal">
                <!--TITULO IMAGEN1 TITLE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|top"
                    android:weightSum="1"
                    android:layout_weight="0.12">
                    <Button
                        android:id="@+id/btnAlertamientoExitoso"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_alertamiento_efect" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="0.15">
                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:text="Da click en este botón para enviar una ALERTA al 911.\n"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyFinalizarViajeExitoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lyAlertamientoExitoso"
            android:background="@drawable/drawable_pressed"
            android:gravity="center_horizontal"
            android:layout_marginBottom="70dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|top"
                android:weightSum="1"
                android:layout_weight="0.12">
                <Button
                    android:id="@+id/btnFinalizarViaje"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_finalizar_efect"/>
                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="Si oprimiste alguno de los botones (Seguimiento/Alertamiento), realiza lo siguiente:\n
                        \na) Ir a notificaciones dar click en “DETENER”\n
                        \n b) Dar click en este botón para finalizar tu viaje.\n"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>